<%- include('./partials/header.ejs') %>

    <link rel="stylesheet" href="/stylesheets/produtos.css">


    <body>
        <div class="container-principal">
            <h1>EDITAR PRODUTO</h1>

            <form action="/produtos/editar/<%=produto.id%>?_method=PUT" method="post">
                <div class="form-group">
                    <label for="codigo">Código</label>
                    <input type="text" id="codigo" name="codigo" value="<%= produto.codigo %>">
                </div>
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" value="<%= produto.nome %>">
                </div>
                <input id="salvarAlt" type="submit" value="Salvar alterações">

            </form>

        </div>
    </body>