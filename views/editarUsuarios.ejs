<%- include('./partials/header.ejs') %>

    <link rel="stylesheet" href="/stylesheets/produtos.css">


    <body>
        <div class="container-principal">
            <h1>EDITAR USUÁRIO</h1>

            <form action="/usuarios/editar/<%=usuario.id%>?_method=PUT" method="post">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" value="<%= usuario.nome %>">
                </div>
                <div class="form-group">
                    <label for="sobrenome">Sobrenome</label>
                    <input type="text" id="sobrenome" name="sobrenome" value="<%= usuario.sobrenome %>">
                </div>

                <div class="form-group">
                    <label for="setor">Setor</label>
                    <input type="text" id="setor" name="setor" value="<%= usuario.setor %>">
                </div>
                <div class="form-group">
                    <label for="ativo">Ativo</label>
                    <input type="text" id="ativo" name="ativo" value="<%= usuario.ativo %>">
                </div>
                <div class="form-group">
                    <label for="perfil">Perfil</label>
                    <input type="text" id="perfil" name="perfil" value="<%=usuario.perfil %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" value="<%= usuario.email %>">
                </div>
                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" id="senha" name="senha" value="<%= usuario.senha %>">
                </div>
                <input id="salvarAlt" type="submit" value="Salvar alterações">

            </form>

        </div>
    </body>